<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	tools:ignore="MissingPrefix">
    
	<com.ssomai.android.scalablelayout.ScalableLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/white"
	    app:scale_base_width="872"
	    app:scale_base_height="354"
	    >
	    <TextView 
	        android:id="@+id/parent_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        app:scale_top="45"
	        app:scale_left="0"
	        app:scale_width="872"
	        app:scale_height="55"
	        app:scale_textsize="45"/>
	    <EditText
	        android:id="@+id/parent_edit_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/input_box_9"
	        android:gravity="center_vertical"
	        android:inputType="number"
	        android:imeOptions="flagNoExtractUi"
	        app:scale_top ="140"
	        app:scale_left="86"
	        app:scale_width="700"
	        app:scale_height="70"
	        app:scale_textsize="45"/>
	    
	    <TextView
	        android:id="@+id/parent_confirm"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/selector_flexiable_button"
	        android:text="@string/btn_confirm"
	        android:textColor="@color/white"
	        android:gravity="center"
	        app:scale_top="256"
	        app:scale_left="0"
	        app:scale_width="435"
	        app:scale_height="98"
	        app:scale_textsize="45"/>
	    
	    <TextView
	        android:id="@+id/parent_cancel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/selector_flexiable_button"
	        android:text="@string/btn_cancel"
	        android:textColor="@color/white"
	        android:gravity="center"
	        app:scale_top="256"
	        app:scale_left="437"
	        app:scale_width="435"
	        app:scale_height="98"
	        app:scale_textsize="45"/>	        

	</com.ssomai.android.scalablelayout.ScalableLayout>
</LinearLayout>
