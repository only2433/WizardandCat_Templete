<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <com.littlefox.library.view.scale.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        sl:scale_base_height="1080"
        sl:scale_base_width="1920" >

        <VideoView
            android:id="@+id/intro_video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            sl:scale_height="1080"
            sl:scale_left="0"
            sl:scale_top="0"
            sl:scale_width="1920" />
    </com.littlefox.library.view.scale.ScalableLayout>
    
<com.littlefox.library.view.scale.ScalableLayout
        android:id="@+id/skip_base_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        sl:scale_base_width="1920"
        sl:scale_base_height="100">

        <ImageView
            android:id="@+id/skip_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/btn_skip_bg"
            android:visibility="visible"
            sl:scale_height="100"
            sl:scale_left="1577"
            sl:scale_top="0"
            sl:scale_width="263" />

        <TextView
            android:id="@+id/skip_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Intro_text"
            android:textColor="@color/white"
            android:visibility="visible"
            sl:scale_height="100"
            sl:scale_left="1577"
            sl:scale_textsize="42"
            sl:scale_top="0"
            sl:scale_width="263" />
    </com.littlefox.library.view.scale.ScalableLayout>

</RelativeLayout>